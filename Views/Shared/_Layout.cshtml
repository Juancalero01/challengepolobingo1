<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="~/lib/bootstrap-icons/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link
      rel="stylesheet"
      href="~/Bingoapp.styles.css"
      asp-append-version="true"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-light bg-light py-3 shadow-sm">
        <div class="container">
          <a class="navbar-brand fw-bold" href="#">Bingoapp</a>
        </div>
      </nav>
    </header>

    <div class="container">
      <main role="main" class="pb-3">@RenderBody()</main>
    </div>

    <footer class="bg-white">
      <div class="container py-3 border-top">
        <a
          href="https://github.com/Juancalero01"
          target="_blank"
          class="btn text-dark"
        >
          <i class="bi bi-github fs-5"></i> Juancalero01
        </a>
      </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
